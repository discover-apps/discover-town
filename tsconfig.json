{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "baseUrl": "./src/react",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}